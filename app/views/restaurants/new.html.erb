<div class="container">
  <h1 class="my-4">Add a restaurant</h1>
  <div class="row">
    <%= simple_form_for [@restaurant] do |f| %>
    <%= f.input :name, class: "half-width"%>
    <%= f.input :address %>
    <%= f.input :category, label: 'Cuisine', as: :select, collection: %w[Chinese Japanese Italian Belgian French] %>
    <%= f.input :phone_number %>
    <%= f.submit "Submit restaurant", class: "btn btn-warning" %>
    <% end %>
  </div>
</div>
